<%- contentFor('body') %>



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title"></h4>
                <p class="card-title-desc">

                <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                    <thead>
                    <tr>
                        <th>Personel</th>
                        <th>Bölüm</th>
                        <th>Pozisyon</th>
                        <th>Yöneticiler</th>
                        <th>Durum</th>
                        
                    </tr>
                    </thead>

                    <tbody>
                       
                        <%if (records.length > 0){ %>
                            <% records.forEach(function(row){ %>
                            <tr>
                                <td><%= row.isim %></td>
                                <td><%= row.bolum %></td>
                                <td><%= row.pozisyon %></td>
                                <td>Yönetici</td>
                                <%if (row.durum == true){ %>
                                    <td>Aktif</td>
                                <% }else{ %> 
                                    <td>Pasif</td>    
                                <% } %>
                            </tr>
                        <% })}else{ %>
                            <tr>
                                <td colspan="6">No Record Found</td> 
                            </tr>
                        <% } %>
                 
                
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->


